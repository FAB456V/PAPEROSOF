<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cambiado a color blanco -->
            <corners android:radius="8dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Cambiado a gris claro -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
