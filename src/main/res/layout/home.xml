<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_red_dark"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Logo de la tienda -->
        <ImageView
            android:id="@+id/storeLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/loga"
            android:contentDescription="Logo de la tienda" />

        <!-- Nombre del restaurante -->
        <TextView
            android:id="@+id/storeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text="PAPEROS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Botón de cuenta -->
        <ImageButton
            android:id="@+id/accountButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/user"
            android:contentDescription="Cuenta de usuario"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Contenedor dinámico para los botones de productos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">

        <LinearLayout
            android:id="@+id/productContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>
</RelativeLayout>
